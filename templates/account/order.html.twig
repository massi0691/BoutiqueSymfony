{% extends 'base.html.twig' %}
{% block title %}
    Mes commandes - Shop-Kabyila!
                              
        
    
{% endblock %}
{% block content %}

    <h1>
        Mes commandes
    </h1>
</br>
<p>
    c'est dans cet espace que vous gérer toutes vos commandes.
                        
                        
</p>
<a href="{{ path('app_account') }}">
    Retourner a mon compte
</a>

{% if orders|length == 0 %}
<hr>
            <p class="text-center">
                Vous n'avez pas encore passer de commande sur la boutique shop-kabylia 
            </p>
        
            {% else %}

                <table class="table mt-3">
                    <thead>
                        <tr> 
                            <th scope="col">Réference</th>
                            <th scope="col">Passée le</th>
                            <th scope="col">Produit(s)</th>
                            <th scope="col">Total</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                        <tr>
                            <td><span class="badge badge-secondary">{{order.reference}}</span></td>
                            <td>{{order.createdAt|date('d/m/Y')}}</td>
                            <td>{{order.orderDetails|length}}</td>
                            <td>{{((order.carrierPrice + order.getTotal()) / 100)|number_format(2,',','.')}} €</td>
                            <td class="text-right"><a href="{{path('app_account_order_show',{ 'reference': order.reference })}}">Voir ma commande</a></td>    
                        </tr>
                                   
                        {% endfor %}
                     
                    </tbody>
                </table>
             
       
{% endif %}
{% endblock %}